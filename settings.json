/*
  VS Code supports JSON with Comments (jsonc) mode.
  https://code.visualstudio.com/docs/languages/json#_json-with-comments
*/

{
  // My - Accessibility
  "editor.rulers": [80, 120],
  "editor.autoClosingBrackets": "never",
  "editor.autoIndent": "keep",
  "editor.cursorBlinking": "smooth",
  "editor.fontFamily": "'OperatorMonoSSmLig Nerd Font', 'OperatorMonoSSmLig-Light', 'HiraginoSans-W2'",
  "editor.fontSize": 14,
  "editor.fontWeight": 100,
  "editor.letterSpacing": 0.5,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "all",
  "editor.renderWhitespace": "boundary",
  "editor.suggestSelection": "first",
  "editor.semanticHighlighting.enabled": true,
  "editor.fontLigatures": true,
  "editor.accessibilitySupport": "off",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "name": "Normal",
        "scope": ["keyword.operator"],
        "settings": {
          "fontStyle": ""
        }
      },
      {
        "name": "Bold",
        "scope": [
          "comment",
          "markup.italic",
          "storage.type.function.arrow",
          "storage.type",
          "storage",
          "support.function",
          "variable.language"
        ],
        "settings": {
          "fontStyle": "bold"
        }
      },
      {
        "name": "Italic",
        "scope": ["keyword.control", "keyword.operator.new"],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "name": "Bold-Italic",
        "scope": [],
        "settings": {
          "fontStyle": "bold italic"
        }
      }
    ]
  },
  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairsHorizontal": false,
  "editor.hover.delay": 1000,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.autoUpdate": true,
  "window.openFilesInNewWindow": "off",
  "workbench.colorTheme": "Snazzy Light",
  "workbench.iconTheme": "ayu",
  "workbench.editor.enablePreview": true,
  "workbench.editor.languageDetection": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.fontAliasing": "antialiased",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.visible": true,
  "workbench.tips.enabled": false,
  "workbench.editorAssociations": {
    "git-rebase-todo": "default",
    "*.jpg": "luna.editor"
  },

  // My - Editing
  "files.autoSave": "onFocusChange",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/vendor": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },

  // My - Security
  "security.workspace.trust.untrustedFiles": "open",

  // My - Terminal
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.fontFamily": "'OperatorMonoSSmLig Nerd Font', 'OperatorMonoSSmLig-Light', 'HiraginoSans-W2'",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": 100,
  "terminal.integrated.letterSpacing": 0.5,
  "terminal.integrated.defaultProfile.osx": "fish",
  // https://glitchbone.github.io/vscode-base16-term/#/railscasts
  "workbench.colorCustomizations": {
    "terminal.background": "#3a3a3a", // Default: "#2B2B2B"
    "terminal.foreground": "#E6E1DC",
    "terminalCursor.background": "#A6AFB8",
    "terminalCursor.foreground": "#A6AFB8",
    "terminal.ansiBlack": "#18262F",
    "terminal.ansiBlue": "#33B5E1",
    "terminal.ansiCyan": "#52CBB0",
    "terminal.ansiGreen": "#7CC844",
    "terminal.ansiMagenta": "#A363D5",
    "terminal.ansiWhite": "#A6AFB8",
    "terminal.ansiYellow": "#E4B51C",
    "terminal.ansiBrightBlack": "#667581",
    "terminal.ansiBrightBlue": "#33B5E1",
    "terminal.ansiBrightCyan": "#52CBB0",
    "terminal.ansiBrightGreen": "#7CC844",
    "terminal.ansiBrightMagenta": "#A363D5",
    "terminal.ansiBrightRed": "#EF5253",
    "terminal.ansiBrightWhite": "#F5F7FA",
    "terminal.ansiBrightYellow": "#E4B51C"
  },

  // My - iocave.customize-ui
  "customizeUI.stylesheet": {
    ".mac:lang(en)": "font-family: OperatorSSm-Light, Hiragino Kaku Gothic W2;",
    ".tabs-breadcrumbs .file .label-name": "text-decoration: underline;"
  },

  // My - eamodio.gitlens
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.advanced.messages": {
    "suppressRebaseSwitchToTextWarning": true
  },

  // My - humao.rest-client
  "rest-client.enableTelemetry": false,

  // My - oderwat.indent-rainbow
  "indentRainbow.errorColor": "rgba(255, 255, 255, 0.1)",
  "indentRainbow.indentSetter": {
    "ruby": {
      "tabSize": 2,
      "insertSpaces": true
    }
  },

  // My - ms-vscode-remote.remote-ssh
  "remote.SSH.configFile": "~/.ssh/config.vscode",

  // My - shellcheck
  "shellcheck.exclude": ["[\"1091\"]"],

  // Go
  "[go]": {
    "editor.formatOnSave": true
  },

  // Go - golang.go
  "go.alternateTools": {},
  "go.formatTool": "goimports",
  "go.lintTool": "golangci-lint",
  "go.lintFlags": [
    "--config=${workspaceFolder}/.golangci.yml",
    "--fast",
    "--fix"
  ],
  "go.useLanguageServer": true,
  "go.toolsManagement.autoUpdate": true,
  "gopls": {
    "analyses": { "composites": false }
  },

  // Go - maracko.json-to-go
  "json-to-go.inputSource": "selection",

  // Typescript/Javascript
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.tsserver.trace": "verbose",

  // ESLint - dbaeumer.vscode-eslint
  "eslint.alwaysShowStatus": true,
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.packageManager": "npm",
  "eslint.validate": ["javascript", "typescript"],

  // Stylelint - stylelint.vscode-stylelint
  "stylelint.enable": true,

  // Ruby
  "[ruby]": {
    "editor.formatOnSave": true
  },

  // Ruby - rebornix.ruby
  "ruby.lint": {
    "rubocop": true
  },
  "ruby.format": "rubocop",
  "ruby.useLanguageServer": true,
  "ruby.intellisense": "rubyLocate",

  // Markdown
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "markdown.preview.fontFamily": "'OperatorMonoSSmLig-Light', 'HiraginoSans-W2'",
  "markdown.preview.fontSize": 14,

  // Terraform - hashicorp.terraform
  "terraform.languageServer": {
    "external": true
  },
  "terraform.codelens.referenceCount": true,

  // CloudFormation - kddejong.vscode-cfn-lint
  "redhat.telemetry.enabled": true,
  "json.schemas": [],
  "yaml.schemas": {},
  "yaml.customTags": [
    "!And",
    "!And sequence",
    "!If",
    "!If sequence",
    "!Not",
    "!Not sequence",
    "!Equals",
    "!Equals sequence",
    "!Or",
    "!Or sequence",
    "!FindInMap",
    "!FindInMap sequence",
    "!Base64",
    "!Join",
    "!Join sequence",
    "!Cidr",
    "!Ref",
    "!Sub",
    "!Sub sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!ImportValue sequence",
    "!Select",
    "!Select sequence",
    "!Split",
    "!Split sequence"
  ],
  "yaml.validate": false,

  // footsteps
  "footsteps.maxNumberOfChangesToRemember": 3,
  "footsteps.highlightColor": "rgb(210, 210, 210)",

  // cloudcode
  "cloudcode.beta.enableCombinedK8s": false,
  "cloudcode.beta.enableSkaffoldModules": false,
  "cloudcode.enableGkeAutopilotSupport": false,
  "cloudcode.enableNewWelcomePage": false,
  "cloudcode.enableTelemetry": false,
  "cloudcode.minikubeStatusBar": false,
  "cloudcode.yaml.enableKubernetesSupport": false,
  "cloudcode.yaml.enableMigrateForAnthosSupport": false,
  "cloudcode.kubectlExecShell": "fish",
  "cloudcode.beta.enableArtifactRegistry": false,
  "cloudcode.beta.enableApiBrowserV2": false
}
